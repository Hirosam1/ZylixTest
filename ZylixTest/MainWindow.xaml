<Window x:Class="ZylixTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZylixTest"
        mc:Ignorable="d"
        Title="Zylix Test" MinWidth="100" Height="450" Width="800" ResizeMode="CanResize" SizeChanged="Window_SizeChanged">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <!-- 1- Definição da coluna da árvore -->
            <ColumnDefinition x:Name="treeColum" MinWidth="10" Width="*"/>
            <!-- 2- Definição para o conteúdo do elemento selecionado-->
            <ColumnDefinition x:Name="ctntColum"  Width="4*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Background="LightGray"/>
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Background="LightGray"/>
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Background="LightGray"/>
        <Border Grid.Column="3" Grid.Row="0" Grid.RowSpan="4" Background="LightGray"/>
        <!-- Implementaçao do menu iniciar-->
        <Menu Grid.Column="1" Grid.Row="1" Background="LightGray" Margin="3">
            <MenuItem Header="Arquivo" Background="LightGray">
                <MenuItem x:Name="menuLoad" Header="Carregar  arquivo" Click="menuLoad_Click"/>
                <MenuItem x:Name="menuSave" Header="Salvar  arquivo" Click="menuSave_Click"/>
            </MenuItem>
        </Menu>
        <!-- Implementaçao da tree-->
        <ScrollViewer Margin="3" Grid.Column="1" Grid.Row="2" Background="White" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TreeView>
                <TreeViewItem Header="Config Directory">
                    <TreeViewItem Header="000 System Layout"/>
                    <TreeViewItem Header="100 Pulse Inputs"/>
                </TreeViewItem>
                <TreeViewItem Header="System Directory">
                    <TreeViewItem Header="Security Directotry"/>
                    <TreeViewItem Header="001 - General Purpose"/>
                </TreeViewItem>
            </TreeView>
        </ScrollViewer>
       <!-- Implementraçao dos elementos-->
        <ScrollViewer Margin="5" Grid.Column="2" Grid.Row="2" x:Name="ctntScroll" Visibility="Visible" Background="White"  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition x:Name="last" Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="ID" Background="LightGray" BorderBrush="DarkGray" BorderThickness="1"/>
                <!-- Define o nome dos parametros-->
                <Label Grid.Column="1" Content="Description" Background="LightGray" BorderBrush="DarkGray" BorderThickness="1"/>
                <Label Grid.Column="2" Content="Value" Background="LightGray" BorderBrush="DarkGray" BorderThickness="1"/>
                <Label Grid.Column="3" Content="Comment" Background="LightGray" BorderBrush="DarkGray" BorderThickness="1"/>
                <!-- Teste-->
                <TextBox x:Name="ID_1" Grid.Column="0" Grid.Row="1" Text="105"/>
                <TextBox x:Name="DESC_1" Grid.Column="1" Grid.Row="1" Text="Maximum Available arms"/>
                <TextBox x:Name="VAL_1" Grid.Column="2" Grid.Row="1" Text="0"/>
                <TextBox x:Name="COM_1" Grid.Column="3" Grid.Row="1" Text=""/>

            </Grid>
        </ScrollViewer>
        <!-- Controla o grid spliter que controla o tamanho das partes da janela-->
        <GridSplitter Grid.Column="2" Grid.Row="2" Background="LightGray" HorizontalAlignment="Left" Width="6" BorderThickness="1" BorderBrush="Black" Margin="0"/>

    </Grid>
</Window>
